<% layout('/layout/boilerPlate') %>
    <div class="main">
        <h1>all listing</h1>
        
        <!-- <form method="GET" action="/listing/create" >
            <button>create new list</button>
        </form> -->
        <br>
        <hr>
       
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
            <% listData.forEach((val)=>{ %>
                <a href="http://localhost:3000/listing/<%=val._id%>" class="listCardLink">
                <div class="card col" style="width: 16rem;">
                    
                    <img src="<%=val.image%>" class="card-img-top" alt="listing_image" style="height:10rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                       <b> <%=val.title%> <br> </b>
                        &#8377; <%=val.price.toLocaleString("en-IN")%> /night
                      </p>
                    </div>
        </div>
        </a>
        <% }) %>
        </div>
    
    </div>
</body>
