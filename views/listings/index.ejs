<% layout('/layout/boilerPlate') %>
    <br>
    
        <h1>All listing</h1>
        <hr>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% listData.forEach((val)=>{ %>
                <a href="/listing/<%=val._id%>" class="listCardLink">
                <div class="card col" style="width: 20rem;">
                    <img src="<%=val.image%>" class="card-img-top" alt="listing_image" style="height:18rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                       <b> <%=val.title%> <br> </b>
                        &#8377; <%=val.price.toLocaleString("en-IN")%> /night
                      </p>
                    </div>
        </div>
        </a>
        <% }) %>
        </div>
    
 

